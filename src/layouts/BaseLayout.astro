---
import '../styles/global.css';
const { title = 'SUMMING — инфраструктура цифровых процессов' } = Astro.props;
---

<!DOCTYPE html>
<html lang="ru">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta
      name="description"
      content="SUMMING — технологическая компания, создающая инфраструктуру цифровых процессов. Первый продукт — «ОПОРА», платформа визуальной автоматизации и интеграций."
    />
    <script type="text/javascript">
      (function (m, e, t, r, i, k, a) {
        m[i] =
          m[i] ||
          function () {
            (m[i].a = m[i].a || []).push(arguments);
          };
        m[i].l = 1 * new Date();
        for (var j = 0; j < document.scripts.length; j++) {
          if (document.scripts[j].src === r) {
            return;
          }
        }
        k = e.createElement(t), (a = e.getElementsByTagName(t)[0]), (k.async = 1), (k.src = r), a.parentNode.insertBefore(k, a);
      })(window, document, 'script', 'https://mc.yandex.ru/metrika/tag.js', 'ym');

      ym(35318095, 'init', { clickmap: true, accurateTrackBounce: true, trackLinks: true });
    </script>
    <noscript
      ><div
        ><img
          src="https://mc.yandex.ru/watch/35318095"
          style="position:absolute; left:-9999px;"
          alt=""
      /></div></noscript
    >
  </head>
  <body class="bg-slate-950 text-slate-100 antialiased">
    <header class="border-b border-slate-800 bg-slate-950/80 backdrop-blur">
      <div
        class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 flex items-center justify-between py-4"
      >
        <a href="/" class="text-xl font-semibold tracking-tight">
          SUMMING
        </a>
        <nav class="hidden md:flex gap-6 text-sm text-slate-300">
          <a href="#about" class="hover:text-white">О компании</a>
          <a href="#product" class="hover:text-white">ОПОРА</a>
          <a href="#why" class="hover:text-white">Зачем бизнесу</a>
          <a href="#beta" class="hover:text-white">Бета-доступ</a>
        </nav>
      </div>
    </header>

    <slot />

    <footer class="border-t border-slate-900/80 mt-8">
      <div
        class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-6 text-xs sm:text-sm text-slate-500 flex flex-col sm:flex-row items-center justify-between gap-2"
      >
        <p>&copy; {new Date().getFullYear()} SUMMING. Все права защищены.</p>
        <p class="text-slate-600">
          Email:
          <a href="mailto:hello@summing.org" class="hover:text-slate-300">
            hello@summing.org
          </a>
        </p>
      </div>
    </footer>
  </body>
</html>
